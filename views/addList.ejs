<% include ../partials/headers %>

<div class="container">
  <h1><strong> PROFIL </strong></h1>
  <hr class="my-2">
  <form action="" method="post" action="/add">
    <input type="hidden" name="" value="">
    <div class="form-group row">
      <label for="project_name" class="col-sm-2 col-form-label">Name : </label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="project_name" placeholder="project name" name="project_name" value="">

      </div>
    </div>

    <% data.forEach((item) => {%>
      <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck1" name="id" value="<%= item.userid %>" >
            <label class="form-check-label" for="gridCheck1">
              <%= item.firstname%> <%= item.lastname%>
            </label>
          </div>
        </div>
      </div>
      <%})%>

      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </div>
    </div>
  </body>
  </html>
