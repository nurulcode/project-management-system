<% include ../partials/headers %>
    <!-- ============================== PROFILS ==============================-->
    <div class="container">
        <h1><strong> PROFIL </strong></h1>
        <hr class="my-2">
        <form method="post" action="/profile/<%= data.userid%>">
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputEmail3" placeholder="Email" name="formemail" value="<%= data.email %>"  readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword3" placeholder="Password" name="formpass">
            </div>
        </div>
        <fieldset class="form-group">
            <div class="row">
                <legend class="col-form-label col-sm-2 pt-0">Position</legend>

                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="manager"
                            <%= data.role == "manager" ? 'checked' : ' '%>>
                        <label class="form-check-label" for="gridRadios1">
                            Manager
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="software developer"   <%= data.role == "software developer" ? 'checked' : ' '%>>
                        <label class="form-check-label" for="gridRadios2">
                            Software Developer
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="quality assurance"   <%= data.role == "quality assurance" ? 'checked' : ' '%>>
                        <label class="form-check-label" for="gridRadios3">
                            Quality Assurance
                        </label>
                    </div>
                </div>

            </div>
        </fieldset>
        <div class="form-group row">
            <div class="col-sm-2">Type</div>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck1" value="1" name="fulltime"   <%= data.type == 1 ? 'checked' : ''%>>
                    <label class="form-check-label" for="gridCheck1">
                        Fulltime
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </div>
    </div>
    </form>
    <!-- </div> -->
</body>

</html>
