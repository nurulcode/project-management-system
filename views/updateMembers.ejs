<% include ../partials/headers %>
<div class="container-fluid">
  <div class="row">
    <nav class="col-md-2 d-none d-md-block bg-light sidebar">
      <div class="sidebar-sticky">
        <ul class="nav flex-column nav-pills">

          <hr class="my-2 bg-dark">
          <li class="nav-item">
            <a class="nav-link" href="../project_detail_page_overview">
              <span data-feather="home"></span>
              Overview <span class="sr-only">(current)</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="../project_detail_page_activity">
              <span data-feather="file"></span>
              Activity
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="../project_detail_page_members">
              <span data-feather="users"></span>
              Member
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="../project_detail_page_issues">
              <span data-feather="help-circle"></span>
              Issues
            </a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <h1><strong> UPDATE MEMBERS </strong></h1>
      <hr class="my-2">
      <form action="" method="POST">

        <div class="form-group row">
          <label for="inputPassword" class="col-sm-2 col-form-label">Project Name</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="projectName" placeholder="Project Name" name="projectName" value="<%- data.concat %>" readonly>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-2 col-form-label">
            Member
          </label>
          <div class="col-10">
            <select class="custom-select" name="role">
              <option <%= data.role == 'manager' ? 'selected' : '' ; %> value="manager" >  Manager </option>
              <option <%= data.role == 'software developer' ? 'selected' : '' ; %> value="software developer"> Software Developer </option>
              <option <%= data.role == 'quality assurance' ? 'selected' : '' ; %> value="quality assurance">  Quality Assurance </option>

            </select>
          </div>
        </div>

        <div class="form-group row">
          <label for="inputPassword" class="col-sm-2 col-form-label">Project Name</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="projectName" placeholder="Project Name" name="projectName" value="<%- data.name %>" readonly>
          </div>
        </div>

        <button class="btn btn-success" type="submit">Save</button>
        <a href="/projects" class="btn btn-warning">Cancel</a>
      </form>
    </div>
  </div>
</div>
<% include ../partials/footers %>
